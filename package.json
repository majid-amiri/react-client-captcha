{
  "name": "react-client-captcha",
  "version": "2.0.0",
  "description": "A light JS-based captcha generator for React.js",
  "author": "majid-amiri",
  "license": "MIT",
  "repository": "majid-amiri/react-client-captcha",
  "main": "dist/index.js",
  "module": "dist/index.modern.js",
  "source": "src/index.js",
  "engines": {
    "node": ">=10"
  },
  "scripts": {
    "build": "microbundle-crl --compress --format modern,cjs",
    "start": "microbundle-crl watch --no-compress --format modern,cjs",
    "prepare": "run-s build",
    "test": "run-s test:unit test:lint test:build size",
    "test:build": "run-s build",
    "test:lint": "eslint .",
    "test:unit": "cross-env CI=1 react-scripts test --env=jsdom --unhandled-rejections=warn",
    "test:watch": "react-scripts test --env=jsdom --unhandled-rejections=warn",
    "predeploy": "cd example && yarn install && yarn run build",
    "deploy": "gh-pages -d example/build",
    "size": "size-limit",
    "generate-props": "node src/scripts/generateReactPropsTable.js src/index.js"
  },
  "peerDependencies": {
    "prop-types": "^15.8.1",
    "react": "^16.0.0",
    "react-dom": "^17.0.2"
  },
  "devDependencies": {
    "@size-limit/preset-small-lib": "^7.0.8",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.2",
    "babel-eslint": "^10.0.3",
    "cross-env": "^7.0.2",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-config-standard": "^14.1.0",
    "eslint-config-standard-react": "^9.2.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-standard": "^4.0.1",
    "gh-pages": "^2.2.0",
    "jest-canvas-mock": "^2.3.1",
    "microbundle-crl": "^0.13.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.0.4",
    "react": "^16.13.1",
    "react-docgen": "^5.4.0",
    "react-dom": "^16.13.1",
    "react-scripts": "^3.4.1",
    "size-limit": "^7.0.8"
  },
  "files": [
    "dist"
  ],
  "dependencies": {},
  "size-limit": [
    {
      "path": "dist/index.js",
      "limit": "2 KB"
    }
  ]
}
